@model List<Person>

<h2>People List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Phone Number</th>
            <th>Email Address</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var person in Model)
        {
            <tr>
                <td>@person.Name</td>
                <td>@person.PhoneNumber</td>
                <td>@person.EmailAddress</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@person.PersonId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@person.PersonId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create">Create New Person</a>
